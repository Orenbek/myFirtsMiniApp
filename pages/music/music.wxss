@import 'music-controller/music-controller-template.wxss';

.controller{
  top: 986rpx;
}

.contain {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 30rpx 50rpx;
}

.components {
  display: flex;
  flex-direction: column;
  padding: 0rpx 10rpx;
}

.component-img {
  width: 100rpx;
  height: 100rpx;
  padding-bottom: 15rpx;
}

.component-title {
  margin-bottom: 16rpx;
  font-size: 24rpx;
  text-align: center;
}

.horizon {
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
}

.recom-title {
  margin-left: 15rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.cover-contain {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 10rpx 15rpx;
}

.cover {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 15rpx;
  width: 240rpx;
}

.cover-img {
  width: 220rpx;
  height: 220rpx;
  /* padding-bottom: 15rpx; */
  margin-bottom: 15rpx;
  /* 这两个好像没啥区别 */
}

.cover-title {
  /* margin-bottom: 16rpx; */
  margin: 0rpx 10rpx 16rpx 10rpx;
  font-size: 24rpx;
  word-break: break-all;
  /* 换行用的 */
}
